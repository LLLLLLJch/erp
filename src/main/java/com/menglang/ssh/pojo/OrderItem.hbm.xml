<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.menglang.ssh.pojo" auto-import="true">
		<class name="OrderItem" table="order_item">
			<id name="id" column="id">
				<generator class="native"></generator>
			</id>
			<property name="orderNo" column="order_no" type="java.lang.String"></property>
			<property name="customerId" column="customer_id"></property>
			<property name="productId" column="product_id"></property>
			<property name="productName" column="product_name"></property>
			<property name="productImage" column="product_image"></property>
			<property name="totalPrice" column="total_price"></property>
			<property name="quantity" column="quantity"></property>
			<property name="createTime" column="create_time"></property>
			<property name="updateTime" column="update_time"></property>
		</class>
</hibernate-mapping>
